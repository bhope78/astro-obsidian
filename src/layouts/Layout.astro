---
import Navigation from '../components/Navigation.astro';

export interface Props {
	title?: string;
}

const { title = 'Ossified Orbit' } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Navigation />
		<main class="main-content">
			<slot />
		</main>
	</body>
</html>

<style is:global>
	/* Clean, minimal global styles that work WITH Tailwind, not against it */
	html {
		font-feature-settings: 'rlig' 1, 'calt' 1;
	}
	
	body {
		margin: 0;
		padding: 0;
		background-color: #ffffff;
		min-height: 100vh;
	}
	
	/* Modern mobile-first responsive layout - Works with Tailwind utilities */
	.main-content {
		/* Mobile: Account for sticky nav height (h-16 = 64px) */
		padding-top: 4rem;
		min-height: calc(100vh - 4rem);
		padding-left: 1rem;
		padding-right: 1rem;
		position: relative;
		z-index: 1;
	}
	
	/* Desktop: Adjust for larger navigation (lg:h-24 = 96px) */
	@media (min-width: 1024px) {
		.main-content {
			padding-top: 6rem;
			min-height: calc(100vh - 6rem);
			padding-left: 2rem;
			padding-right: 2rem;
		}
	}
	
	/* Fix for home page to prevent double spacing */
	.main-content > .relative.isolate.overflow-hidden {
		margin-top: -4rem;
		margin-left: -1rem;
		margin-right: -1rem;
	}
	
	@media (min-width: 1024px) {
		.main-content > .relative.isolate.overflow-hidden {
			margin-top: -6rem;
			margin-left: -2rem;
			margin-right: -2rem;
		}
	}
	
	/* Mobile menu positioning */
	#mobile-menu {
		position: absolute;
		top: 100%;
		left: 0;
		right: 0;
		z-index: 50;
	}
</style>
