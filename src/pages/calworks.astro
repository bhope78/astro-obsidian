</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 1200px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
	
	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 2rem;
	}
	
	.hero-section {
		text-align: center;
		margin-bottom: 3rem;
		padding: 2rem;
		background: rgba(255, 255, 255, 0.1);
		border-radius: 12px;
		border: 1px solid rgba(255, 255, 255, 0.2);
	}
	
	.hero-section p {
		font-size: 1.3rem;
		margin: 0;
		color: #f39c12;
	}
	
	.content-sections {
		display: flex;
		flex-direction: column;
		gap: 3rem;
	}
	
	.service-section h2 {
		color: #f39c12;
		margin-bottom: 1.5rem;
		font-size: 2rem;
	}
	
	.service-section p {
		font-size: 1.1rem;
		margin-bottom: 1.5rem;
	}
	
	.services-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
		gap: 2rem;
		margin-top: 2rem;
	}
	
	.service-card {
		background: rgba(255, 255, 255, 0.1);
		padding: 2rem;
		border-radius: 12px;
		border: 1px solid rgba(255, 255, 255, 0.2);
		transition: transform 0.3s, box-shadow 0.3s;
		text-align: center;
	}
	
	.service-card:hover {
		transform: translateY(-5px);
		box-shadow: 0 10px 30px rgba(243, 156, 18, 0.2);
	}
	
	.service-icon {
		font-size: 3rem;
		margin-bottom: 1rem;
	}
	
	.service-card h3 {
		color: #e67e22;
		margin-bottom: 1rem;
		font-size: 1.4rem;
	}
	
	.service-card > p {
		font-size: 1rem;
		margin-bottom: 1.5rem;
		text-align: left;
	}
	
	.service-card ul {
		list-style: none;
		padding: 0;
		margin: 0;
		text-align: left;
	}
	
	.service-card li {
		padding: 0.5rem 0;
		font-size: 0.95rem;
		border-bottom: 1px solid rgba(255, 255, 255, 0.1);
	}
	
	.service-card li:last-child {
		border-bottom: none;
	}
	
	.service-card li::before {
		content: "‚úì";
		color: #f39c12;
		font-weight: bold;
		margin-right: 0.5rem;
	}
	
	.support-categories {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(500px, 1fr));
		gap: 3rem;
		margin-top: 2rem;
	}
	
	.support-category h3 {
		color: #f39c12;
		margin-bottom: 2rem;
		font-size: 1.5rem;
		text-align: center;
	}
	
	.support-items {
		display: flex;
		flex-direction: column;
		gap: 1.5rem;
	}
	
	.support-item {
		display: flex;
		gap: 1rem;
		background: rgba(255, 255, 255, 0.05);
		padding: 1.5rem;
		border-radius: 8px;
		border-left: 4px solid #f39c12;
	}
	
	.item-icon {
		font-size: 2rem;
		flex-shrink: 0;
	}
	
	.item-content h4 {
		color: #e67e22;
		margin: 0 0 0.5rem 0;
		font-size: 1.1rem;
	}
	
	.item-content p {
		font-size: 0.95rem;
		margin: 0;
		line-height: 1.4;
	}
	
	.outcomes-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
		gap: 2rem;
		margin-top: 2rem;
	}
	
	.outcome-stat {
		background: rgba(243, 156, 18, 0.1);
		padding: 2rem;
		border-radius: 12px;
		text-align: center;
		border: 1px solid rgba(243, 156, 18, 0.3);
	}
	
	.stat-number {
		font-size: 3rem;
		font-weight: bold;
		color: #f39c12;
		margin-bottom: 0.5rem;
	}
	
	.stat-label {
		font-size: 1rem;
		color: #e67e22;
	}
	
	.getting-started {
		margin-top: 2rem;
	}
	
	.step-process {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 2rem;
	}
	
	.process-step {
		background: rgba(255, 255, 255, 0.05);
		padding: 2rem;
		border-radius: 12px;
		text-align: center;
		border: 1px solid rgba(255, 255, 255, 0.1);
	}
	
	.step-icon {
		background: #f39c12;
		color: white;
		width: 50px;
		height: 50px;
		border-radius: 50%;
		display: flex;
		align-items: center;
		justify-content: center;
		font-size: 1.5rem;
		font-weight: bold;
		margin: 0 auto 1rem auto;
	}
	
	.process-step h3 {
		color: #f39c12;
		margin-bottom: 1rem;
		font-size: 1.3rem;
	}
	
	.process-step p {
		font-size: 1rem;
		margin: 0;
	}
	
	.cta {
		text-align: center;
		background: rgba(243, 156, 18, 0.1);
		padding: 3rem;
		border-radius: 12px;
		border: 1px solid rgba(243, 156, 18, 0.3);
	}
	
	.cta-buttons {
		display: flex;
		justify-content: center;
		gap: 1rem;
		margin-top: 2rem;
		flex-wrap: wrap;
	}
	
	.cta-button {
		display: inline-block;
		padding: 1rem 2rem;
		border-radius: 6px;
		text-decoration: none;
		font-weight: bold;
		font-size: 1.1rem;
		transition: all 0.3s;
	}
	
	.cta-button.primary {
		background: #f39c12;
		color: white;
	}
	
	.cta-button.primary:hover {
		background: #e67e22;
		transform: translateY(-2px);
	}
	
	.cta-button.secondary {
		background: transparent;
		color: #f39c12;
		border: 2px solid #f39c12;
	}
	
	.cta-button.secondary:hover {
		background: #f39c12;
		color: white;
		transform: translateY(-2px);
	}
	
	@media (max-width: 768px) {
		main {
			width: 100%;
		}
		
		h1 {
			font-size: 3rem;
		}
		
		.hero-section p {
			font-size: 1.1rem;
		}
		
		.services-grid {
			grid-template-columns: 1fr;
		}
		
		.support-categories {
			grid-template-columns: 1fr;
		}
		
		.outcomes-grid {
			grid-template-columns: repeat(2, 1fr);
		}
		
		.step-process {
			grid-template-columns: 1fr;
		}
		
		.cta-buttons {
			flex-direction: column;
			align-items: center;
		}
	}
</style>