---
const currentPath = Astro.url.pathname;
---

<nav class="sticky top-0 z-50">
	<div class="relative bg-white shadow-sm">
		<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
			<div class="flex h-16 lg:h-24 items-center justify-between">
				<!-- Left side: Logo and Main Menu -->
				<div class="flex items-center">
					<!-- Logo -->
					<div class="flex-shrink-0">
						<a href="/" class="flex items-center">
							<img src="/bonita_house_logo.jpeg" alt="Bonita House" class="h-12 lg:h-20 w-auto">
						</a>
					</div>

					<!-- Desktop Navigation -->
					<div class="hidden lg:flex lg:items-center lg:space-x-6 ml-8">
						<!-- Who We Are Dropdown -->
						<div class="relative group">
							<button class={`inline-flex items-center gap-x-1 text-sm font-semibold leading-6 ${['/', '/about', '/leadership', '/contact'].includes(currentPath) ? 'text-bonita-600' : 'text-gray-900 hover:text-bonita-600'}`}>
								Who We Are
								<svg class="h-4 w-4 transition-transform group-hover:rotate-180" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
									<path fill-rule="evenodd" d="M5.23 7.21a.75.75 0 011.06.02L10 11.168l3.71-3.938a.75.75 0 111.08 1.04l-4.25 4.5a.75.75 0 01-1.08 0l-4.25-4.5a.75.75 0 01.02-1.06z" clip-rule="evenodd" />
								</svg>
							</button>
						<div class="absolute left-1/2 top-full z-10 mt-3 w-screen max-w-xs -translate-x-1/2 transform px-2 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200">
							<div class="overflow-hidden rounded-3xl bg-white shadow-lg ring-1 ring-gray-900/5">
								<div class="p-4">
									<div class="group relative flex items-center gap-x-6 rounded-lg p-4 text-sm leading-6 hover:bg-gray-50">
										<div class="flex-auto">
											<a href="/" class={`block font-semibold ${currentPath === '/' ? 'text-bonita-600' : 'text-gray-900'}`}>Home</a>
											<p class="mt-1 text-gray-600">Welcome to Bonita House</p>
										</div>
									</div>
									<div class="group relative flex items-center gap-x-6 rounded-lg p-4 text-sm leading-6 hover:bg-gray-50">
										<div class="flex-auto">
											<a href="/about" class={`block font-semibold ${currentPath === '/about' ? 'text-bonita-600' : 'text-gray-900'}`}>About Us</a>
											<p class="mt-1 text-gray-600">Our mission and values</p>
										</div>
									</div>
									<div class="group relative flex items-center gap-x-6 rounded-lg p-4 text-sm leading-6 hover:bg-gray-50">
										<div class="flex-auto">
											<a href="/leadership" class={`block font-semibold ${currentPath === '/leadership' ? 'text-bonita-600' : 'text-gray-900'}`}>Leadership</a>
											<p class="mt-1 text-gray-600">Meet our team</p>
										</div>
									</div>
									<div class="group relative flex items-center gap-x-6 rounded-lg p-4 text-sm leading-6 hover:bg-gray-50">
										<div class="flex-auto">
											<a href="/contact" class={`block font-semibold ${currentPath === '/contact' ? 'text-bonita-600' : 'text-gray-900'}`}>Contact</a>
											<p class="mt-1 text-gray-600">Get in touch with us</p>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>

					<!-- What We Do Dropdown -->
					<div class="relative group">
						<button class={`inline-flex items-center gap-x-1 text-sm font-semibold leading-6 ${['/residential-treatment', '/in-home-outreach', '/supported-independent-living', '/wellness-centers', '/housing', '/crisis-services', '/calworks'].includes(currentPath) ? 'text-bonita-600' : 'text-gray-900 hover:text-bonita-600'}`}>
							What We Do
							<svg class="h-4 w-4 transition-transform group-hover:rotate-180" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
								<path fill-rule="evenodd" d="M5.23 7.21a.75.75 0 011.06.02L10 11.168l3.71-3.938a.75.75 0 111.08 1.04l-4.25 4.5a.75.75 0 01-1.08 0l-4.25-4.5a.75.75 0 01.02-1.06z" clip-rule="evenodd" />
							</svg>
						</button>
						<div class="absolute left-1/2 top-full z-10 mt-3 w-screen max-w-md -translate-x-1/2 transform px-2 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200">
							<div class="overflow-hidden rounded-3xl bg-white shadow-lg ring-1 ring-gray-900/5">
								<div class="p-4 grid grid-cols-1 gap-1">
									<a href="/residential-treatment" class={`group relative flex items-center gap-x-6 rounded-lg p-4 text-sm leading-6 hover:bg-gray-50 ${currentPath === '/residential-treatment' ? 'bg-bonita-50' : ''}`}>
										<div class="flex-auto">
											<span class={`block font-semibold ${currentPath === '/residential-treatment' ? 'text-bonita-600' : 'text-gray-900'}`}>Residential Treatment</span>
											<p class="mt-1 text-gray-600">24/7 supportive care</p>
										</div>
									</a>
									<a href="/in-home-outreach" class={`group relative flex items-center gap-x-6 rounded-lg p-4 text-sm leading-6 hover:bg-gray-50 ${currentPath === '/in-home-outreach' ? 'bg-bonita-50' : ''}`}>
										<div class="flex-auto">
											<span class={`block font-semibold ${currentPath === '/in-home-outreach' ? 'text-bonita-600' : 'text-gray-900'}`}>In Home Outreach</span>
											<p class="mt-1 text-gray-600">Care in your home</p>
										</div>
									</a>
									<a href="/supported-independent-living" class={`group relative flex items-center gap-x-6 rounded-lg p-4 text-sm leading-6 hover:bg-gray-50 ${currentPath === '/supported-independent-living' ? 'bg-bonita-50' : ''}`}>
										<div class="flex-auto">
											<span class={`block font-semibold ${currentPath === '/supported-independent-living' ? 'text-bonita-600' : 'text-gray-900'}`}>Independent Living</span>
											<p class="mt-1 text-gray-600">Support for independence</p>
										</div>
									</a>
									<a href="/wellness-centers" class={`group relative flex items-center gap-x-6 rounded-lg p-4 text-sm leading-6 hover:bg-gray-50 ${currentPath === '/wellness-centers' ? 'bg-bonita-50' : ''}`}>
										<div class="flex-auto">
											<span class={`block font-semibold ${currentPath === '/wellness-centers' ? 'text-bonita-600' : 'text-gray-900'}`}>Wellness Centers</span>
											<p class="mt-1 text-gray-600">Comprehensive wellness</p>
										</div>
									</a>
									<a href="/housing" class={`group relative flex items-center gap-x-6 rounded-lg p-4 text-sm leading-6 hover:bg-gray-50 ${currentPath === '/housing' ? 'bg-bonita-50' : ''}`}>
										<div class="flex-auto">
											<span class={`block font-semibold ${currentPath === '/housing' ? 'text-bonita-600' : 'text-gray-900'}`}>Housing</span>
											<p class="mt-1 text-gray-600">Safe, stable housing</p>
										</div>
									</a>
									<a href="/crisis-services" class={`group relative flex items-center gap-x-6 rounded-lg p-4 text-sm leading-6 hover:bg-gray-50 ${currentPath === '/crisis-services' ? 'bg-bonita-50' : ''}`}>
										<div class="flex-auto">
											<span class={`block font-semibold ${currentPath === '/crisis-services' ? 'text-bonita-600' : 'text-gray-900'}`}>Crisis Services</span>
											<p class="mt-1 text-gray-600">24/7 emergency support</p>
										</div>
									</a>
									<a href="/calworks" class={`group relative flex items-center gap-x-6 rounded-lg p-4 text-sm leading-6 hover:bg-gray-50 ${currentPath === '/calworks' ? 'bg-bonita-50' : ''}`}>
										<div class="flex-auto">
											<span class={`block font-semibold ${currentPath === '/calworks' ? 'text-bonita-600' : 'text-gray-900'}`}>CalWORKs</span>
											<p class="mt-1 text-gray-600">Support for families</p>
										</div>
									</a>
								</div>
							</div>
						</div>
					</div>

						<!-- Direct Links -->
						<a href="/careers" class={`text-sm font-semibold leading-6 ${currentPath === '/careers' ? 'text-bonita-600' : 'text-gray-900 hover:text-bonita-600'}`}>Careers</a>
					</div>
				</div>

				<!-- Right side: Donate Button -->
				<div class="hidden lg:flex lg:items-center">
					<a href="/donate" class="inline-flex items-center rounded-full bg-bonita-600 px-8 py-4 text-lg font-semibold text-white shadow-lg hover:bg-bonita-700 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-bonita-600 transition-all duration-300 hover:shadow-xl hover:-translate-y-1">Donate</a>
				</div>

				<!-- Mobile menu button -->
				<div class="flex lg:hidden">
					<button type="button" class="-m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-gray-700" id="mobile-menu-button">
						<span class="sr-only">Open main menu</span>
						<svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
							<path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
						</svg>
					</button>
				</div>
			</div>
		</div>

		<!-- Mobile menu -->
		<div class="lg:hidden opacity-0 invisible transition-all duration-200" id="mobile-menu">
			<div class="space-y-2 bg-white px-6 pb-3 pt-2 shadow-lg ring-1 ring-gray-900/5">
				<div class="space-y-1">
					<p class="block px-3 py-2 text-base font-semibold leading-7 text-gray-900">Who We Are</p>
					<a href="/" class={`block rounded-lg px-6 py-2 text-base font-semibold leading-7 ${currentPath === '/' ? 'text-bonita-600 bg-bonita-50' : 'text-gray-900 hover:bg-gray-50'}`}>Home</a>
					<a href="/about" class={`block rounded-lg px-6 py-2 text-base font-semibold leading-7 ${currentPath === '/about' ? 'text-bonita-600 bg-bonita-50' : 'text-gray-900 hover:bg-gray-50'}`}>About</a>
					<a href="/leadership" class={`block rounded-lg px-6 py-2 text-base font-semibold leading-7 ${currentPath === '/leadership' ? 'text-bonita-600 bg-bonita-50' : 'text-gray-900 hover:bg-gray-50'}`}>Leadership</a>
					<a href="/contact" class={`block rounded-lg px-6 py-2 text-base font-semibold leading-7 ${currentPath === '/contact' ? 'text-bonita-600 bg-bonita-50' : 'text-gray-900 hover:bg-gray-50'}`}>Contact</a>
				</div>
				<div class="space-y-1">
					<p class="block px-3 py-2 text-base font-semibold leading-7 text-gray-900">What We Do</p>
					<a href="/residential-treatment" class={`block rounded-lg px-6 py-2 text-base font-semibold leading-7 ${currentPath === '/residential-treatment' ? 'text-bonita-600 bg-bonita-50' : 'text-gray-900 hover:bg-gray-50'}`}>Residential Treatment</a>
					<a href="/in-home-outreach" class={`block rounded-lg px-6 py-2 text-base font-semibold leading-7 ${currentPath === '/in-home-outreach' ? 'text-bonita-600 bg-bonita-50' : 'text-gray-900 hover:bg-gray-50'}`}>In Home Outreach</a>
					<a href="/supported-independent-living" class={`block rounded-lg px-6 py-2 text-base font-semibold leading-7 ${currentPath === '/supported-independent-living' ? 'text-bonita-600 bg-bonita-50' : 'text-gray-900 hover:bg-gray-50'}`}>Independent Living</a>
					<a href="/wellness-centers" class={`block rounded-lg px-6 py-2 text-base font-semibold leading-7 ${currentPath === '/wellness-centers' ? 'text-bonita-600 bg-bonita-50' : 'text-gray-900 hover:bg-gray-50'}`}>Wellness Centers</a>
					<a href="/housing" class={`block rounded-lg px-6 py-2 text-base font-semibold leading-7 ${currentPath === '/housing' ? 'text-bonita-600 bg-bonita-50' : 'text-gray-900 hover:bg-gray-50'}`}>Housing</a>
					<a href="/crisis-services" class={`block rounded-lg px-6 py-2 text-base font-semibold leading-7 ${currentPath === '/crisis-services' ? 'text-bonita-600 bg-bonita-50' : 'text-gray-900 hover:bg-gray-50'}`}>Crisis Services</a>
					<a href="/calworks" class={`block rounded-lg px-6 py-2 text-base font-semibold leading-7 ${currentPath === '/calworks' ? 'text-bonita-600 bg-bonita-50' : 'text-gray-900 hover:bg-gray-50'}`}>CalWORKs</a>
				</div>
				<a href="/careers" class={`block rounded-lg px-3 py-2 text-base font-semibold leading-7 ${currentPath === '/careers' ? 'text-bonita-600 bg-bonita-50' : 'text-gray-900 hover:bg-gray-50'}`}>Careers</a>
				<a href="/donate" class="block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-white bg-bonita-600 hover:bg-bonita-700">Donate</a>
			</div>
		</div>
	</div>
</nav>

<script>
	// Mobile menu toggle
	const mobileMenuButton = document.getElementById('mobile-menu-button');
	const mobileMenu = document.getElementById('mobile-menu');
	
	if (mobileMenuButton && mobileMenu) {
		mobileMenuButton.addEventListener('click', () => {
			const isOpen = mobileMenu.classList.contains('opacity-100');
			
			if (isOpen) {
				// Close menu
				mobileMenu.classList.remove('opacity-100', 'visible');
				mobileMenu.classList.add('opacity-0', 'invisible');
			} else {
				// Open menu
				mobileMenu.classList.remove('opacity-0', 'invisible');
				mobileMenu.classList.add('opacity-100', 'visible');
			}
		});
		
		// Close menu when clicking on a link
		mobileMenu.querySelectorAll('a').forEach(link => {
			link.addEventListener('click', () => {
				mobileMenu.classList.remove('opacity-100', 'visible');
				mobileMenu.classList.add('opacity-0', 'invisible');
			});
		});
	}
</script>